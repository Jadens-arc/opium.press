{% extends 'base.html.twig' %}

{% block title %}| {{ post.title }}{% endblock %}

{% block content %}
    <h6 class="card-header" style="display: flex; justify-content: space-between">
        <div class="d-flex flex-row" style="flex-grow: 1">
            <span class="d-block text-capitalize">{{ post.creator.displayName }}</span>
            <a class="d-block mx-2 fw-light text-muted" href="/writer/{{ post.creator.username }}">@{{ post.creator.username }}</a>
        </div>
        <div class="d-flex flex-row justify-content-between">
            <a href="/essay/share/{{ post.id }}">
                <img src="/brands/instagram.svg" style="margin-left:20px; width: 1rem;" alt="">
            </a>
        </div>
    </h6>

    <hr>
    <span class="d-block text-muted">{{ post.creationDate.format('Y-m-d H:i:s') }}</span>
    <h5 class="h1">{{ post.title }}</h5>
    <div class="m-2">
        {% for tag in post.tags %}
            <span class="badge text-bg-primary mx-1">#{{ tag }}</span>
        {% endfor %}
    </div>
    <div class="p">{{ post.content|nl2br }}</div>
    {% if post.sources %}
        <div>
            <h1 class="mt-3">Sources</h1>
            <ul>
                {% for source in post.sources %}
                    <li>
                        {% if "https://" in source or "http://" in source %}
                            <a href="{{ source }}">{{ source }}</a>
                        {% else %}
                            <span>{{ source }}</span>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}
