{% extends 'base.html.twig' %}

{% block title %}| {{ post.title }}{% endblock %}

{% block content %}
    <div class="card-header row mb-2">
        <div class="col-sm row" style="flex-grow: 1">
            <div class="col-auto d-flex flex-row" style="width: fit-content">
                <a href="/capsule/share/{{ post.id }}">
                    <img src="/brands/instagram.svg" class="icon mx-2" style="width: 1rem;" alt="">
                </a>
                <span class="d-block mx-2 fw-bold text-capitalize">{{ post.creator.displayName }}</span>
                <a class="d-block mx-2 fw-light text-muted" href="/writer/{{ post.creator.username }}">@{{ post.creator.username }}</a>
            </div>
            <span class="d-block col-sm text-muted mx-2">{{ post.creationDate.format('Y-m-d H:i:s') }}</span>
        </div>
    </div>

    <div class="d-flex flex-row mb-3">
        <div class="tags d-flex flex-row" style="overflow-y: hidden; scrollbar-width: none;">
            {% for tag in post.tags %}
                <a href="{{ path('app_homepage', {'q': '#' ~ tag}) }}"  style="text-decoration: none; height: fit-content;" class="badge text-bg-primary mx-1">#{{ tag }}</a>
            {% endfor %}
        </div>
    </div>

    <hr>

    <h5 class="h1">{{ post.title }}</h5>
    <div class="p">{{ post.content|nl2br }}</div>
    {% if post.sources %}
        <div>
            <h2 class="mt-5">Sources</h2>
            <ul>
                {% for source in post.sources %}
                    <li>
                        {% if "https://" in source or "http://" in source %}
                            <a href="{{ source }}">{{ source }}</a>
                        {% else %}
                            <span>{{ source }}</span>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}
